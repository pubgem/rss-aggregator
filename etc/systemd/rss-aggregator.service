# Install to /etc/systemd/system
# https://access.redhat.com/documentation/en-US/Red_Hat_Enterprise_Linux/7/html/System_Administrators_Guide/sect-Managing_Services_with_systemd-Unit_Files.html

[Unit]
Description=RSSAggregator

[Service]
Type=simple
User=rss-aggregator
Group=rss-aggregator
Environment="SETTINGS=/etc/systemd/system/rss-aggregator.conf"
ExecStart=/home/rss-aggregator/.virtualenvs/rss-aggregator/bin/manage.py aggregate

[Install]
WantedBy=multi-user.target
